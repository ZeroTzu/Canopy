        <item name="android:colorBackground">@color/polaris_grey_90</item>
        <item name="colorSecondary">@color/polaris_la_salle_green_50</item>
        <item name="colorSurface">@color/polaris_la_salle_green_10</item>
        <item name="colorOnSurface">@color/polaris_violet_90</item>
    </style>

    <style name="Theme.Polaris.LoginForm" parent="Theme.Polaris">
        <item name="colorPrimary">@color/polaris_grey</item>
        <item name="colorPrimaryVariant">@color/polaris_grey_90</item>
        <item name="colorPrimaryDark">@color/black </item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/polaris_grey_90</item>
        <item name="colorSecondary">@color/polaris_la_salle_green_50</item>
        <item name="colorSurface">@color/polaris_la_salle_green_10</item>
        <item name="colorOnSurface">@color/polaris_violet_90</item>
    </style>

    <style name="Theme.Polaris.CustomButton1" parent="Theme.Polaris">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Polaris.CustomButton2" parent="Theme.Polaris">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">130dp</item>
        <item name="android:background">@drawable/custom_button2</item> <!-- Drawable for button -->
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Polaris.CustomButtonCircle" parent="Theme.Polaris">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_button_circle</item> <!-- Drawable for button -->
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:radius">1dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">1dp</item>
    </style>
    <style name="Theme.Polaris.FloatingActionButton" parent="Theme.Polaris">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">130dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button2</item> <!-- Drawable for button -->
    </style>
    <style name="Theme.Polaris.MapFrame" parent="Theme.Polaris.Secondary">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:background">@drawable/custom_map_frame</item> <!-- Drawable for button -->
        <item name="android:backgroundTint">?attr/colorTertiary</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>


    <!-- In styles.xml -->
    <style name="NeutralTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Neutral background color for the input field -->
        <item name="boxBackgroundColor">@color/polaris_grey_90</item> <!-- Light gray background to contrast with black -->
        <!-- Outline border color -->
        <item name="boxStrokeColor">#BDBDBD</item> <!-- Gray border color when not focused -->
        <!-- Text color for hint text -->
        <item name="hintTextColor">@color/neutral_hint</item>
        <!-- Text color for input text -->
        <item name="android:textColor">#333333</item> <!-- Dark gray for good readability on neutral background -->
        <item name="placeholderTextColor">@color/polaris_blue_50</item>
        <!-- Floating label color when focused -->
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>


