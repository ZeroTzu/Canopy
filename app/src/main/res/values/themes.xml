        <item name="colorSecondary">@color/polaris_la_salle_green_50</item>
        <item name="colorSurface">@color/polaris_la_salle_green_10</item>
        <item name="colorOnSurface">@color/polaris_violet_90</item>
    </style>
    <style name="Theme.Polaris.Tertiary" parent="Theme.Polaris">
