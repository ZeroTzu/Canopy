        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorError">#7C2424</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSecondary">@color/polaris_blue_50</item>
        <item name="colorSurface">@color/polaris_grey_30</item>
        <item name="colorOnSurface">@color/polaris_blue_50</item>
