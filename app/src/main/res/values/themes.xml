    <style name="Theme.Polaris.CustomButton1" parent="Theme.Polaris">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:background">@drawable/custom_button</item> <!-- Drawable for button -->
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:radius">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
