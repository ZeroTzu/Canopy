<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:theme="@style/Theme.Polaris"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/home_fragment_topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/home_fragment_topBar_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="24sp"
                android:padding="15dp"
                android:ellipsize="end"
                android:maxLines="6"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="348dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/debug_button_1"
                        android:text="@string/start_service"
                        android:background="@drawable/custom_button"
                        android:theme="@style/Theme.Polaris.Purple"
                        style="@style/Theme.Polaris.CustomButton1" />
                    <Button
                        android:id="@+id/debug_button_2"
                        android:text="@string/start_service"
                        android:background="@drawable/custom_button"
                        android:theme="@style/Theme.Polaris.Violet"
                        style="@style/Theme.Polaris.CustomButton1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/debug_button_3"
                        android:text="@string/start_service"
                        android:background="@drawable/custom_button"
                        style="@style/Theme.Polaris.CustomButton1"
                        android:theme="@style/Theme.Polaris.Jade"
                        />
                    <Button
                        android:id="@+id/start_service_button"
                        android:text="@string/start_service"
                        android:background="@drawable/custom_button"
                        style="@style/Theme.Polaris.CustomButton1"
                        android:theme="@style/Theme.Polaris"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>






</FrameLayout>