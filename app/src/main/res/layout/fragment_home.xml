<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:theme="@style/Theme.Polaris"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/home_fragment_topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/home_fragment_topBar_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="?attr/colorOnPrimary"
                android:padding="15dp"
                android:ellipsize="end"
                android:maxLines="6"
                android:textStyle="bold"/>

        </FrameLayout>
        <ImageView
            android:id="@+id/debug_home_fragment_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/home_fragment_topBar"
            app:layout_constraintBottom_toTopOf="@id/debug_home_fragment_bottom_layout"
            app:contentDescription="@string/home_fragment_image_description" />
        <LinearLayout
            android:id="@+id/debug_home_fragment_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:layout_marginEnd="10dp">

                <com.google.android.material.button.MaterialButton
                    style="@style/Theme.Polaris.CustomButtonCircle"
                    app:icon="@drawable/baseline_notifications_24"
                    app:iconGravity="textTop"

                    app:iconSize="25dp"
                    android:theme="@style/Theme.Polaris.Secondary"
                    android:elevation="8dp" /> <!-- Removed shadowColor -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_fragment_logoutButton"
                    app:icon="@drawable/baseline_logout_24"
                    app:iconGravity="textTop"
                    app:iconSize="25dp"
                    app:iconTint="?attr/colorError"
                    style="@style/Theme.Polaris.CustomButtonCircle"
                    android:theme="@style/Theme.Polaris.Secondary" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/home_fragment_scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/debug_button_1"
                        android:text="@string/debug_button"
                        android:background="@drawable/custom_button"
                        app:theme="@style/Theme.Polaris.Secondary"
                        app:icon="@drawable/baseline_blind_24"
                        app:iconGravity="textTop"
                        app:iconSize="40dp"
                        style="@style/Theme.Polaris.CustomButton1"
                        android:theme="@style/Theme.Polaris.Secondary"
                        android:visibility="invisible"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/enter_command_button"
                        android:text="@string/command"
                        android:background="@drawable/custom_button"
                        app:icon="@drawable/baseline_lightbulb_24"
                        app:iconGravity="textTop"
                        app:iconSize="40dp"
                        style="@style/Theme.Polaris.CustomButton1"
                        android:theme="@style/Theme.Polaris.Secondary"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/start_service_button"
                        android:text="@string/start_service"
                        android:background="@drawable/custom_button"
                        app:icon="@drawable/baseline_play_arrow_24"
                        app:iconGravity="textTop"
                        app:iconSize="40dp"
                        style="@style/Theme.Polaris.CustomButton1"
                        android:theme="@style/Theme.Polaris.Secondary" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>






</FrameLayout>