<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Polaris.MapFrame"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@color/transparent"
            >
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".CustomMapsFragment"
                android:background="@color/transparent"
                android:layout_margin="7dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/custom_map_frame"
                />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/transparent">
            <com.google.android.material.button.MaterialButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:icon="@drawable/baseline_gps_fixed_24"
                app:iconGravity="textTop"
                app:iconSize="30dp"
                style="@style/Theme.Polaris.CustomButtonCircle"
                android:theme="@style/Theme.Polaris"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="50dp"
                style="@style/Theme.Polaris.CustomButton2"
                android:text="@string/view_travel_history"
                android:padding="8dp"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_gravity="end"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

