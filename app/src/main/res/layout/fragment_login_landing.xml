<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:theme="@style/AppTheme"

    >
    <FrameLayout
        tools:context=".LoginLandingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/fragment_login_landing_appName_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryDark"
                 />
        </FrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_vertical"
            app:lottie_rawRes="@raw/spaceman_animation"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_progress='1'

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_login_landing_loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.Polaris.CustomButton2"
                android:text="@string/login"
                android:elevation="2dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_login_landing_registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register"
                style="@style/Theme.Polaris.CustomButton2.Cancel"
                app:strokeWidth="2dp"
                android:elevation="2dp"
            />


        </LinearLayout>


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
