<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fill color for the button -->
    <solid android:color="?attr/colorPrimary" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="?attr/colorOnSurfaceVariant" />
    <!-- Rounded corners -->
    <corners android:radius="15dp" />

    <!-- Optional gradient (applied to the fill, excluding the stroke) -->
    <gradient
        android:angle="45"
        android:startColor="@color/Polaris"
        android:centerColor="@color/polaris_grey_70"
        android:endColor="@color/Polaris" />
</shape>
