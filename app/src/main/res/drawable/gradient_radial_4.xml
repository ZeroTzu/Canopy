<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:layout_height="wrap_content">
            <solid android:color="?attr/colorSurface" />
        </shape></item>

    <item><shape>
        <gradient
            android:type="radial"
            android:gradientRadius="80%"
            android:startColor="?attr/colorSurface"
            android:centerX="0.1"
            android:centerY="0.1"
            android:endColor="?attr/colorSurface" />
    </shape></item>

    <item><shape>
        <gradient
            android:type="radial"
            android:gradientRadius="80%"
            android:startColor="?attr/colorSurface"
            android:centerX="0.9"
            android:centerY="0.1"
            android:endColor="?attr/colorSurface" />
    </shape></item>

    <item><shape>
        <gradient
            android:type="radial"
            android:gradientRadius="80%"
            android:startColor="?attr/colorSurface"
            android:centerX="0.1"
            android:centerY="0.5"
            android:endColor="?attr/colorSurface" />
    </shape></item>

    <item><shape>
        <gradient
            android:type="radial"
            android:gradientRadius="80%"
            android:startColor="?attr/colorPrimarySurface"
            android:centerX="0.9"
            android:centerY="0.5"
            android:endColor="?attr/colorSurface" />
    </shape></item>

</layer-list>